<Window x:Class="PistollegroWPF.OrderItemsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PistollegroWPF"
        mc:Ignorable="d"
        Title="Order Item" Height="120" Width="250" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="_NameLabel" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="0,61,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.266,-0.021" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="80,61,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.266,-0.021" Click="CancelButton_Click"/>
        <Label x:Name="ItemNameLabel" Content="Item Name" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="OrderCountTextbox" HorizontalAlignment="Left" Height="23" Margin="80,31,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="label" Content="Order Count" HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
